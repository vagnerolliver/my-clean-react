{
    "compilerOptions": {
      "target": "es6",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "react",
      "rootDir": "./src",
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
      "allowJs": true,
      // "skipLibCheck": true,
      // "allowSyntheticDefaultImports": true,
      // "strict": true,
      // "forceConsistentCasingInFileNames": true,
      // "noEmit": true
      "resolveJsonModule": true,
    },
    "include": [
      "src"
    ]
  }
